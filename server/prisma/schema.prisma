generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  password  String
  ageGroup  String
  goal      String
  progress  Progress[]
}

model Lesson {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  order     Int
  progress  Progress[]
}

model Progress {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  lesson    Lesson?  @relation(fields: [lessonId], references: [id])
  lessonId  String?
  completed Boolean  @default(false)
} 